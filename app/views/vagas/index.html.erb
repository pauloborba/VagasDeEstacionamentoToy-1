
<h1>Vagas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Status</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @vagas.each do |vaga| %>
      <tr style='background-color:<%= vaga.ocupada ? 'red' : 'green'%>'>
        <td><%= vaga.descricao %></td>
        <td><%= vaga.ocupada ? 'ocupada' : 'livre' %></td>
        <td><%= link_to (vaga.ocupada ? 'Desocupar' : 'Reservar'), vaga_reservar_path(vaga), method: :post %></td>
        <td><%= link_to 'Visualizar', vaga %></td>
        <td><%= link_to 'Editar', edit_vaga_path(vaga) %></td>
        <td><%= link_to 'Deletar', vaga, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar nova vaga', new_vaga_path %>
